-- Lynx is capable of building itself:
-- $ lynx build.lynx

(use "examples/clang++.lynx")

clang: ClangArgs = {
    files = [
        "src/tool/Lynx.cpp"
        "src/LynxConf.cpp"
    ]
    include = [
        "include"
    ]
    std = "gnu++20"
    output = "build/lynx"
    optimize = "3"
}

(compile clang)
